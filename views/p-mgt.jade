div.container.center
	div.header
		h1=p.title
	div.form
		- var action = '/p/mgt/' + p._id
		form(method='post', action=action)
			label title
				- var title = p.title
				input(type='text',name='title',value=title)
			label speaker
				- var speaker = p.speaker
				input(type='text',name='speaker',value=speaker)
			label conference
				- var conference = p.conference
				input(type='text',name='conference',value=conference)
			label body
				- var body = p.body
				input(type='text',name='body',value=body)
			input(type='submit', value='Update!')
			button(id='delete_p') Delete!
	div.footer
		a(href='http://springsprout.org') made by 봄싹
script(src='/javascripts/jquery-1.6.1.min.js')
script(type='text/javascript')
	$(function(){
		$('#delete_p').click(function(){
			console.log("delete!!");
			document.location.href = '/p/del/#{p._id}';
			return false;
		});
	});